<li>
  <strong><%= comment.user&.name.presence || '익명' %></strong>
  <div><%= comment.body %></div>
  <div>
    <span>❤️ <%= comment.likes_count %></span>
    <% if user_signed_in? %>
      <% if current_user.liked?(comment) %>
        <%= button_to '취소', comment_like_path(comment), method: :delete %>
      <% else %>
        <%= button_to '좋아요', comment_like_path(comment), method: :post %>
      <% end %>
    <% else %>
      <%= button_to '좋아요', comment_like_path(comment), method: :post, form: { data: { turbo_confirm: '로그인이 필요합니다. 로그인하시겠습니까?', turbo: false } } %>
    <% end %>
  </div>
</li>
