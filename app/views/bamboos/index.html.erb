<main class="page page--bamboos-index">
  <header class="page-header">
    <h1 class="page-title">대나무숲</h1>
    <nav class="page-actions">
      <%= link_to "글 쓰기", new_bamboo_path, class: "action action--create" %>
    </nav>
  </header>

  <% if @bamboos.empty? %>
    <section class="state state--empty">
      <p class="state-text">아직 글이 없습니다.</p>
    </section>
  <% else %>
    <section class="list list--bamboos">
      <% @bamboos.each do |bamboo| %>
        <article class="item item--bamboo">
          <h2 class="item-title"><%= link_to (bamboo.title.presence || "무제"), bamboo_path(bamboo) %></h2>
          <p class="item-summary"><%= truncate(strip_tags(bamboo.body.to_s), length: 100) %></p>
        </article>
      <% end %>
    </section>
  <% end %>
</main>

