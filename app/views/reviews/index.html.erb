<h1 class="text-2xl font-semibold mb-4">리뷰 목록</h1>
<h1 class="text-2xl font-bold text-blue-600">Tailwind 설치 성공!</h1>
<div class="mb-4">
  <%= link_to "새 리뷰 작성", new_review_path, class: "inline-block px-4 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 transition" %>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  <% @reviews.each do |review| %>
    <article class="bg-white border rounded-xl shadow hover:shadow-lg transition overflow-hidden">
      <a href="<%= review_path(review) %>">
        <div class="relative aspect-[3/2] bg-gray-100">
          <% if (blob = review.first_image_blob) %>
            <%= image_tag blob.variant(resize_to_fill: [420, 280]).processed,
                          alt: review.title, loading: "lazy",
                          class: "absolute inset-0 w-full h-full object-cover" %>
          <% else %>
            <div class="absolute inset-0 grid place-items-center">
              <%= image_tag "placeholder.png", alt: "썸네일 없음",
                            class: "max-h-[60%] max-w-[60%] object-contain opacity-70" %>
            </div>
          <% end %>
        </div>

        <div class="p-4">
          <h3 class="font-semibold text-lg mb-2 line-clamp-2"><%= review.title %></h3>
          <p class="text-sm text-gray-600 line-clamp-2">
            <%= truncate(strip_tags(review.body.to_s), length: 80) %>
          </p>
        </div>
      </a>
    </article>
  <% end %>
</div>
